.header
	background-color $color_white
	border-bottom 4px solid $color_gray_dark
	padding .5rem 0
	text-align center

	h1
		font-size .75rem
		margin 0
		padding 0
		text-transform uppercase

		a
			color $color_base
			text-decoration none
			transition background-color .3s ease

			&:hover, &:focus
				background-color $color_highlight
